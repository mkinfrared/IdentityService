{
  "name": "identity-service",
  "version": "0.1.1",
  "private": true,
  "workspaces": [
    "apps/IdentityService/ClientApp",
    "apps/IdentityService.Admin/ClientApp",
    "packages/*"
  ],
  "packageManager": "pnpm@6.29.1",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "build-storybook": "turbo run build-storybook",
    "test": "turbo run test",
    "test:update": "pnpm build && turbo run test --parallel --only -- -- -u",
    "lint": "pnpm format && pnpm lint:styles && pnpm lint:ts",
    "lint:ts": "eslint --cache --fix --ext .ts,.tsx .",
    "lint:styles": "stylelint \"**/*.scss\" --syntax scss --fix --cache",
    "format": "prettier --write \".\"",
    "release": "standard-version && git commit -m",
    "clean": "pnpm -r exec -- rm -rf node_modules && rm -rf node_modules",
    "updates": "turbo run updates --parallel",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "npm-check-updates": "^12.1.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.2",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "turbo": "^1.1.2",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.cs": [
      "dotnet csharpier",
      "dotnet format --include"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
