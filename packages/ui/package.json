{
  "name": "@identity-service/ui",
  "version": "0.1.0",
  "private": true,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "test": "cross-env CI=true DISABLE_NEW_JSX_TRANSFORM=true react-scripts test --collectCoverage",
    "storybook": "pnpm build:colors && cross-env DISABLE_ESLINT_PLUGIN=true start-storybook -p 6007 -s public",
    "build-storybook": "pnpm build:colors && build-storybook -s public",
    "serve:storybook": "http-server storybook-static -p 8081",
    "coverage": "open-cli coverage/lcov-report/index.html",
    "updates": "ncu",
    "clean": "rm -rf node_modules",
    "build:colors": "sass src/styles/colors.scss src/styles/colors.css",
    "e2e": "pnpm e2e:prepare && pnpm exec playwright test -c src/playwright.config.ts",
    "e2e:debug": "npx playwright test -c src/playwright.config.ts --debug",
    "e2e:prepare": "npx playwright install --with-deps",
    "readdir": "ts-node src/utils/readDir.ts"
  },
  "dependencies": {
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@identity-service/core": "workspace:*",
    "@playwright/test": "^1.36.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@rollup/plugin-url": "^8.0.1",
    "@storybook/addon-a11y": "6.5.14",
    "@storybook/addon-actions": "^6.5.14",
    "@storybook/addon-docs": "6.5.14",
    "@storybook/addon-essentials": "^6.5.14",
    "@storybook/addon-interactions": "^6.5.14",
    "@storybook/addon-links": "^6.5.14",
    "@storybook/builder-webpack5": "^6.5.14",
    "@storybook/manager-webpack5": "^6.5.14",
    "@storybook/node-logger": "^6.5.14",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.14",
    "@storybook/testing-library": "^0.0.13",
    "@svgr/rollup": "^6.5.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/resemblejs": "4.1.0",
    "@types/testing-library__jest-dom": "^5.14.5",
    "aria-live-storybook-addon": "^0.0.6",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "cross-env": "^7.0.3",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "open-cli": "^7.1.0",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "raw-loader": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "resemblejs": "^4.1.0",
    "rollup": "^3.5.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "rollup-plugin-ts-treeshaking": "^1.0.2",
    "rollup-plugin-visualizer": "^5.8.3",
    "sass": "^1.56.1",
    "storybook-addon-react-docgen": "^1.2.42",
    "storybook-addon-turbo-build": "^2.0.1",
    "storybook-design-token": "^2.8.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 3 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.type.{ts,tsx}",
      "!**/*.spec.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "index",
      "react-app-env.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ]
  }
}
