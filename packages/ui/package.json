{
  "name": "@identity-service/ui",
  "version": "0.1.0",
  "private": true,
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "test": "cross-env CI=true DISABLE_NEW_JSX_TRANSFORM=true react-scripts test --collectCoverage",
    "storybook": "pnpm build:colors && cross-env DISABLE_ESLINT_PLUGIN=true start-storybook -p 6007 -s public",
    "build-storybook": "pnpm build:colors && build-storybook -s public",
    "coverage": "open-cli coverage/lcov-report/index.html",
    "updates": "ncu",
    "clean": "rm -rf node_modules",
    "build:colors": "sass src/styles/colors.scss src/styles/colors.css"
  },
  "devDependencies": {
    "@identity-service/core": "workspace:*",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-url": "^6.1.0",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-docs": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/builder-webpack5": "^6.4.13",
    "@storybook/manager-webpack5": "^6.4.13",
    "@storybook/node-logger": "^6.4.13",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.13",
    "@svgr/rollup": "^6.2.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "aria-live-storybook-addon": "^0.0.6",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "identity-obj-proxy": "^3.0.0",
    "open-cli": "^7.0.1",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "rollup": "^2.64.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^2.0.5",
    "rollup-plugin-ts-treeshaking": "^1.0.2",
    "rollup-plugin-visualizer": "^5.5.4",
    "sass": "^1.48.0",
    "storybook-design-token": "^1.4.0",
    "tslib": "^2.3.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 3 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.type.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "index",
      "react-app-env.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
