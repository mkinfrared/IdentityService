{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES6",
    "module": "ES6",
    "jsx": "react",
    "noEmit": false,
    "strict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/setupTests.ts"
  ]
}
