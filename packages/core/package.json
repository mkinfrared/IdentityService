{
  "name": "@identity-service/core",
  "version": "0.1.0",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js"
    },
    "./hooks": {
      "import": "./lib/hooks/index.js"
    },
    "./utils": {
      "import": "./lib/utils/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf node_modules",
    "test": "cross-env CI=true DISABLE_NEW_JSX_TRANSFORM=true react-scripts test --collectCoverage",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "coverage": "open-cli coverage/lcov-report/index.html",
    "updates": "ncu"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-url": "^6.1.0",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-docs": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/node-logger": "^6.4.9",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.9",
    "@svgr/rollup": "^6.1.2",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.19",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "identity-obj-proxy": "^3.0.0",
    "open-cli": "^7.0.1",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^5.0.0",
    "rollup": "^2.63.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^2.0.5",
    "rollup-plugin-ts-treeshaking": "^1.0.2",
    "rollup-plugin-visualizer": "^5.5.2",
    "sass": "^1.47.0",
    "storybook-design-token": "^1.4.0",
    "tslib": "^2.3.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.type.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "index",
      "react-app-env.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 77,
        "lines": 68,
        "statements": 66
      }
    }
  },
  "files": [
    "hooks",
    "src/hooks",
    "lib/hooks",
    "utils",
    "src/utils",
    "lib/utils"
  ]
}
