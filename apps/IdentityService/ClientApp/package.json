{
  "name": "@identity-service/client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env webpack && pnpm postbuild",
    "postbuild": "purgecss --config ./config/purgecss.config.js",
    "build:analyze": "cross-env webpack && webpack-bundle-analyzer ../wwwroot/stats.json",
    "build:watch": "cross-env NODE_ENV=development webpack",
    "test": "cross-env CI=true react-scripts test --collectCoverage",
    "storybook": "start-storybook -p 6008 -s public",
    "build-storybook": "build-storybook -s public",
    "coverage": "open-cli coverage/lcov-report/index.html",
    "updates": "ncu",
    "generate:schema": "node src/utils/generateApiTypes/generate.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^2.9.10",
    "@identity-service/core": "workspace:*",
    "@identity-service/ui": "workspace:*",
    "axios": "^1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.40.0",
    "react-query": "^3.39.2",
    "react-router-dom": "^6.10.0",
    "react-use": "^17.4.0",
    "web-vitals": "^3.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@identity-service/core": "workspace:*",
    "@identity-service/ui": "workspace:*",
    "@storybook/addon-actions": "6.5.14",
    "@storybook/addon-docs": "6.5.14",
    "@storybook/addon-essentials": "6.5.14",
    "@storybook/addon-links": "6.5.14",
    "@storybook/builder-webpack5": "6.5.14",
    "@storybook/manager-webpack5": "6.5.14",
    "@storybook/node-logger": "6.5.14",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "6.5.14",
    "@svgr/webpack": "^6.5.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/webpack": "^5.28.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.0",
    "babel-plugin-named-asset-import": "^0.3.8",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.2",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "dotenv-webpack": "^8.0.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-watch-typeahead": "^2.2.1",
    "loader-utils": "^3.2.1",
    "mini-css-extract-plugin": "2.7.1",
    "open-cli": "^7.1.0",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.0.2",
    "postcss-preset-env": "^7.8.3",
    "purgecss": "^5.0.0",
    "raw-loader": "^4.0.2",
    "react-scripts": "^5.0.1",
    "resolve-url-loader": "^5.0.0",
    "sass-loader": "^13.2.0",
    "storybook-addon-turbo-build": "^2.0.1",
    "storybook-design-token": "^2.8.0",
    "swagger-typescript-api": "^12.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "typescript": "^4.9.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.0",
    "webpack-stats-plugin": "^1.1.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 3 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.container.{ts,tsx}",
      "!**/*.type.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "index",
      "serviceWorker",
      "containers",
      "store",
      "react-app-env.d.ts",
      "reportWebVitals.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "transformIgnorePatterns": [
      "@identity-service/core",
      "@identity-service/ui"
    ]
  }
}
