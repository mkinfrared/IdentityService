{
  "name": "@identity-service/admin",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "postinstall": "cp ./node_modules/oidc-client/dist/oidc-client.min.js ./public",
    "start": "react-scripts start",
    "build": "cross-env CI=false react-scripts build",
    "test": "cross-env CI=true react-scripts test --collectCoverage",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6009 -s public",
    "build-storybook": "build-storybook -s public",
    "coverage": "open-cli coverage/lcov-report/index.html",
    "updates": "ncu"
  },
  "dependencies": {
    "@identity-service/core": "workspace:*",
    "@identity-service/ui": "workspace:*",
    "axios": "^0.27.2",
    "oidc-client": "^1.11.5",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-docs": "^6.4.22",
    "@storybook/addon-essentials": "6.4.22",
    "@storybook/addon-links": "6.4.22",
    "@storybook/builder-webpack5": "6.4.22",
    "@storybook/manager-webpack5": "6.4.22",
    "@storybook/node-logger": "6.4.22",
    "@storybook/preset-create-react-app": "^4.1.0",
    "@storybook/react": "6.4.22",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/testing-library__jest-dom": "^5.14.3",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "open-cli": "^7.0.1",
    "raw-loader": "^4.0.2",
    "sass": "^1.51.0",
    "storybook-design-token": "^2.2.0",
    "typescript": "^4.6.4"
  },
  "browserslist": {
    "production": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 3 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.type.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coveragePathIgnorePatterns": [
      "index",
      "reportWebVitals",
      "react-app-env.d",
      "store.ts",
      "__snapshots__"
    ],
    "transformIgnorePatterns": [
      "@identity-service/core",
      "@identity-service/ui"
    ]
  }
}
